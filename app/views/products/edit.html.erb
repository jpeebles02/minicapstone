<div style="background-color:darkgrey">
<h1>Edit Product</h1>
<form action="/products/<%= @product.id %>" method="post">
  <input type="hidden" name="_method" value="patch" />
<div style="background-color:lightgrey">
  <div>
    Name: <input type="text" name="name" value="<%= @product.name %>"/>
  </div>
  <div>
    Price: <input type="text" name="price" value="<%= @product.price %>"/>
  </div>
  <div>
    Description: <input type="text" name="description" value="<%= @product.description %>"/>
  </div>
  <!-- <div>
    Rating: <input type="text" name="rating" value="<%= @product.rating %>"/>
  </div> -->
  <div>
    Choose a rating:
   <select name="rating">
       <option value="1">1</option>
       <option value="2">2</option>
       <option value="3">3</option>
       <option value="4">4</option>
       <option value="5">5</option>
  </select>
  </div>
  <div>
    Choose a user:
    <select name="supplier_id">
      <% @suppliers.each do |supplier| %>
        <option value="<%= supplier.id %>"><%= supplier.name %></option>
      <% end %>
    </select>
  </div>
  <input type="submit" name="" value="Edit Product" />
</div>
</form>